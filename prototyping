# comment
variable = 'value' # variable
null               # null
true; false        # boolean
42; 3.14           # numbers
"hello"; 'world'   # strings
[1, 2]             # list
{'key': 'value'}   # hashmap

# functions
def name(value)
  value
end

# conditions
if x == 1
  x = 0
  return 'odd'
else if x == 2
  x = 0
  return 'even'
else
  'done'
end

name = if true 'Henrique' else 'Daiane'

# loops
for i in [1, 2, 3]
  return i
end

while true
  return 'hi'
end
